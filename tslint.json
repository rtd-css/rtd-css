{
	"extends": ["tslint-config-airbnb", "tslint-consistent-codestyle"],
	"linterOptions": {
		"exclude": ["**/node_modules/**"]
	},
	"rules": {
		"no-unused-variable": true,
		"max-line-length": [true, 140],
		"indent": [true, "tabs", 4],
		"ter-indent": [true, "tab", { "SwitchCase": 1 }],
		"variable-name": [true, "check-format", "allow-leading-underscore"],
		"function-name": [
			true,
			{
				"function-regex": "^[a-z$][\\w\\d]+$",
				"method-regex": "^_?[a-z$][\\w\\d]+$",
				"private-method-regex": "^_?[a-z$][\\w\\d]+$",
				"protected-method-regex": "^_?[a-z$][\\w\\d]+$",
				"static-method-regex": "^[a-z$][\\w\\d]+$"
			}
		],
		"no-increment-decrement": false,
		"ter-computed-property-spacing": false,
		"object-shorthand-properties-first": false,
		"ter-arrow-parens": false
	}
}
